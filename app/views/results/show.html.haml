%h1 Benchmarks

.row
  .col-md-12
    .panel.panel-default
      .panel-heading
        Showing results for
        = @result.benchmark
        which was run using
        = link_to @runner.description, @runner
      .panel-body
        %canvas#chart(height="450" width="1100")

:javascript
  $(function() {
    data = {
      labels: #{@results.keys.to_json.html_safe},
      datasets: [{
        fillColor: "rgba(151,187,205,0.5)",
        strokeColor: "rgba(151,187,205,1)",
        pointColor: "rgba(151,187,205,1)",
        pointStrokeColor: "#fff",
        data: [#{@results.values.join(',').html_safe}]
      }]
    }

    options = {
      bezierCurve: false
    }
    line = new Chart($("#chart")[0].getContext('2d')).Line(data, options);
  });
